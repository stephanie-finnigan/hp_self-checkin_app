@model SelfCheckinWebApp.ViewModels.DinnerReservationsViewModel

@{
    ViewBag.Title = "Add Reservation";
}

@using (Html.BeginForm("DinnerReservationForm", "CheckIn", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="dinner-resvn-form">
        <div class="form-group">
            @Html.LabelFor(model => model.Restaurant, new { @class = "control-label col-sm-5 col-md-5" })
            <div class="col-sm-7 col-md-6">
                @Html.DropDownListFor(model => model.Restaurant, Model.Restaurants, "", new { @id = "listRestaurants", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Restaurant, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NumPersons, new { @class = "control-label col-sm-5 col-md-5" })
            <div class="col-sm-4 col-md-3">
                @Html.DropDownListFor(model => model.NumPersons, Enumerable.Range(1, 15).Select(i => new SelectListItem
                    { Text = i.ToString(), Value = i.ToString() }), "", new { @id = "noPersons", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NumPersons, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SelectedDate, new { @class = "control-label col-sm-5 col-md-5" })
            <div class="col-xs-12 col-sm-7 col-md-6">
                @Html.DropDownListFor(model => model.SelectedDate, Model.StayDatesSelect, "", new { @id = "dinnerDate", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SelectedTime, new { @class = "control-label col-sm-5 col-md-5" })
            <div class="col-sm-7 col-md-6">
                @Html.DropDownListFor(model => model.SelectedTime, Model.Times, "", new { @id = "dinnerTime", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="btn-add-resvn">
            <div class="form-group">
                <input type="submit" value="ADD" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
